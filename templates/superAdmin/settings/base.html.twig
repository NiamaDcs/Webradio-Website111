<!DOCTYPE html>
<html lang="en">
    {% include 'superAdmin/head.html.twig' %}
<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
    {% include 'superAdmin/sidebar.html.twig' %}
        <!-- Main Content -->
        <div id="content">
            {% include 'superAdmin/navigation.html.twig' %}
            
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-6 d-flex">
                        <a class="retour mt-auto mb-1" href="{{ path('superadmin.index') }}" >
                            <i id="fleche-retour" class="fas fa-long-arrow-alt-left"></i>
                            <button id="bouton-retour" class="btn btn-sm rounded-pill">retour</button>
                        </a>
                    </div>
                </div>
                <div class="main d-flex flex-column align-items-center justify-content-center">

                    <!--img logo-->
                     <div class="image-upload">
                            <label for="cameraInput">
                                <img src="{{ user.avatar }}" alt="" id="profil">
                                <i class="far fa-edit" style="font-size:50px; color: #EF0051"></i>
                            </label>
                            <input type="file" accept="image/*" id="cameraInput">
                        </div>
                    <!--input-->

                    <div class="row mb-5">
                        <div class="col-sm">
                            <div class="form-group settingsAdmin" id="name">
                                <input type='text' id="username" class='form-control text-center text-black' placeholder='username' value='{{user.username}}'>
                            </div>
                            <div class="form-group settingsAdmin" id="nomchaine">
                                 <input type='text' id="email" class='form-control text-center text-black' placeholder='Email' value='{{user.email}}'>
                            </div>
                            <div class="form-group settingsAdmin">
                                <input type="button" id="button-settingsAdmin" class="form-control border-0 font-weight-bold text-white"  style="background-color:#EF0051;" value="Enregistrer">
                            </div>
                        </div>
                    </div>

                <!-- Divider -->
                <hr class="sidebar-divider my-0 w-100 mb-5">

                <form>
                    <div class="row mb-3">
                        <div class="col-xl-12 d-flex flex-column align-items-center justify-content-center">
                            <div class="">
                                <h2 class="h2 mb-2 text-black">Changer mon mot de passe</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-sm">
                            <div class="row col-xl-12 alert alert-success"  style="display: none;" id="mypassword" role="alert">
                                succ√®s le mot de passe a changer!!
                            </div>
                            
                            <div class="form-group setting">
                                <input type='password' id="password" class='form-control text-center text-black' placeholder='mot de passe' value='{{user.password}}'>
                            </div>

                            <div class="form-group setting">
                                <input type="submit" id="savePassword" class="form-control border-0 font-weight-bold text-white" style="background-color:#EF0051;" value="Enregistrer">
                            </div>
                        </div>
                    </div> 
                </form>

                </div>  
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span class="text-black">Copyright &copy; Webradio - Stream - 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

{% include 'superAdmin/settings/script.html.twig' %}

</body>

</html>
